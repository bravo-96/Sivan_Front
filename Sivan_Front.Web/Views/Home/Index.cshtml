@{
    ViewData["Title"] = "Home";
}

<!--PRESENTACIÓN-->
<div id="Presentacion" class="section-presentacion container">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="presentacion-text">
                <p class="home-para1">Decora tu espacio</p>
                <h1>ART & DECO <br /> SIVAN</h1>
                <p class="home-para2">
                    Temporada 2023 - Lorem ipsum
                    sit amet, consecutor adpsiern
                </p>

                <button class="btn-presentacion">Ver más</button>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6">
            <img class="img-presentacion" src="~/images/Home/img-HomeSivan1.svg" />
        </div>
    </div>
</div>

<!--PRODUCTO MÁS VENDIDO-->
<div id="ProductoPopular" class="section-ProductoPopular container-fluid">
    <div class="row">
        <div class="col-12 productoPopular-Info position-relative">
            <h2>Producto más vendido 💗</h2>
            <p class="title-ProductoPopular">Sillón Mostaza</p>
            <p class="productoPopular-Detalle">Tapizado de terciopelo</p>
            <p class="productoPopular-Detalle">Medidas 170 x 220</p>
            <p class="productoPopular-Detalle">Colores disponibles</p>
            <img src="~/images/Home/img-colorDisponible.svg" />
            <br />
            <button class="btn-presentacion">Comprar</button>

            <img class="img-Producto" src="~/images/Home/img-ProductoPopular.png" />
        </div>
    </div>
</div>


<!--ADELANTO NUEVA TEMPORADA-->
<div id="NuevaTemporada" class="section-NuevaTemporada container">
    <div class="row">
        <div class="col-12">
            <h3 class="nuevaTemporada-title">Vistazo de la nueva temporada</h3>

            <section class="splide" aria-label="Nueva temporada">
                <div class="splide__track">
                    <ul class="splide__list">

                        <li class="splide__slide">
                            <img src="~/images/Home/img-Carrousel1.svg" />
                        </li>

                        <li class="splide__slide">
                            <img src="~/images/Home/img-Carrousel2.svg" />
                        </li>

                        <li class="splide__slide">
                            <img src="~/images/Home/img-Carrousel3.svg" />
                        </li>

                    </ul>
                </div>
            </section>
        </div>
    </div>
</div>


<!--INSPIRATE-->
<div id="Instagram" class="section-Instagram container-fluid">
    <div class="row">
        <div class="col-12 position-relative">
            <img class="img-Instagram" src="~/images/Home/img-Ig-inspire.svg" />
            <h4 class="inspirate-title">INSPIRATE.</h4>
            <a href="#">Ver Instagram</a>

            <img class="img-Ig-1" src="~/images/Home/img-Ig-1.png" />

            <img class="img-Ig-2" src="~/images/Home/img-Ig-2.png" />

            <img class="img-Ig-3" src="~/images/Home/img-Ig-3.png" />
        </div>
    </div>
</div>

<!--NOSOTROS-->
<div id="Nosotros" class="section-Nosotros container-fluid pb-5">
        <div>
            <h5 class="Nosotros-title">NOSOTROS</h5>
        </div>
    
    <div class="row text-center">
        <div class="col-lg-3 col-sm-3 col-sm-3 ">
            <img src="~/images/Home/img-Nosotros1.svg" />

            <p class="Nosotros-info">Envío gratis y en el día</p>
            <p class="Nosotros-infoExtra">Aplica a todas las compras</p>
        </div>
        <div class="col-lg-3 col-sm-3 col-sm-3 pt-2 ">
            <img src="~/images/Home/img-Nosotros2.svg" />

            <p class="Nosotros-info">Pago seguro</p>
            <p class="Nosotros-infoExtra">Conexión segura y certificada</p>
        </div>
        <div class="col-lg-3 col-sm-3 col-sm-3 pb-2 ">
            <img src="~/images/Home/img-Nosotros3.svg" />

            <p class="Nosotros-info">Devolución de dinero</p>
            <p class="Nosotros-infoExtra">Devolución de dinero asegurado</p>
        </div>
        <div class="col-lg-3 col-sm-3 col-sm-3  pt-2">
            <img src="~/images/Home/img-Nosotros4.svg" />

            <p class="Nosotros-info">Soporte online</p>
            <p class="Nosotros-infoExtra">Soporte las 24hs</p>
        </div>
    </div>
</div>

